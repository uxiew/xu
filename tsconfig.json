{
  "compilerOptions": {
    "target": "ES2018",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "exclude": [
    "**/dist/*.ts",
    "**/dist/*.d.ts",
  ],
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
    "./**/*.tsx",
    "./**/*.vue",
    "types/**.d.ts",
    "types/**/**.d.ts",
  ]
}